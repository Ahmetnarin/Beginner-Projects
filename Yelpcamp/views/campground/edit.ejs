<% layout('layouts/boilerplate') %>
    <h1>Edit Campground</h1>
    <form action="/campground/<%= campground._id %>?_method=PUT" method="POST">
        <div>
            <label for="title">Title</label>
            <input type="text" id="title" name="campground[title]" value="<%=campground.title%>">
        </div>
        <div>
            <label for="location">Location</label>
            <input type="text" id="location" name="campground[location]" value="<%=campground.location %>">
        </div>
        <button>Update Campground</button>
    </form>

    <footer>
        
        <input type="button" onclick="location.href='/campground/<%= campground._id %>';" value="Back to Campground" />
    </footer>
    
